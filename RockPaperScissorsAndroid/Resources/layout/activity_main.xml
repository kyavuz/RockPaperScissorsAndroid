<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
        android:text="Rock"
        android:layout_width="300px"
        android:layout_height="150px"
        android:layout_gravity="start|bottom"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="50dp"
        android:id="@+id/RockSelectButton"
        android:onClick="RockSelectClicked" />

    <Button
        android:text="Paper"
        android:layout_width="300px"
        android:layout_height="150px"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="50dp"
        android:id="@+id/PaperSelectButton"
        android:onClick="PaperSelectClicked" />

    <Button
        android:text="Scissors"
        android:layout_width="300px"
        android:layout_height="150px"
        android:layout_gravity="end|bottom"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="50dp"
        android:id="@+id/ScissorsSelectButton"
        android:onClick="ScissorsSelectClicked" />

    <ImageView
        android:src="@drawable/homePage"
        android:layout_width="wrap_content"
        android:layout_height="1000px"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="130dp"
        android:id="@+id/GameSelectionView" />

    <ImageView
        android:src="@drawable/empty"
        android:layout_width="match_parent"
        android:layout_height="500px"
        android:layout_gravity="center|top"
        android:layout_marginTop="90dp"
        android:id="@+id/WinLoseStatusView" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>